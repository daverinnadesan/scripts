#!/bin/bash
git remote add github_rsdata_config git@github.com:daverinnadesan/ha_config.git
email=$(cat /home/homeassistant/config/email.txt)
echo "Commiting changes"
git -C /home/homeassistant/config/ commit -a -m "Standard Message"
echo "Pushing config to github @${email}"
git -C /home/homeassistant/config/ push github_rsdata_config ${email}
echo "Done"
